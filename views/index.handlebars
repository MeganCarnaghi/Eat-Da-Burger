<form class="form-inline" action="/burgers" method="POST">
  <div class="form-group mx-sm-3 mb-2">
    <input class="form-control" type="text" id="name" name="burger_name" placeholder="Burger Name">
  </div>
  <button type="submit" class="btn btn-primary mb-2 addBurgerButton">Submit</button>
</form>
    <!-- End of form -->
  </div>
</div>
<!-- End jumbotron -->

<!-- Start burger list section -->
<div class="container">
  <div class="row">
<!-- Start burger-ready side -->
<div class="col">
<div class="card">
  <div class="card-header ready-side">
   <h4>Ready to Devour</h4>
   <p>Click on the button to devour your burger.</p>
  </div>
   {{#each burgers}}
    {{#unless this.devoured}}
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{this.burger_name}}
    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
    <button type="submit" class="btn btn-success">Devour</button>
    </form>    
    </li>
  </ul>
{{/unless}}
{{/each}}
</div>    
</div>
<!-- End burger-ready side -->

<!-- Start devoured burger side -->
    <div class="col">
    <div class="card">
  <div class="card-header devoured-side">
   <h4>Devoured Burgers</h4>
   <p>A list of the burgers that have been devoured.</p>
  </div>
        {{#each burgers}}
          {{#if this.devoured}}
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{this.burger_name}}</li>
  </ul>
          {{/if}}
        {{/each}}
</div> 
    </div>
  </div>
<!-- End devoured burger side -->
<!-- End burger list section -->

<!-- Start jumbotron -->
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Welcome to Eat Da Burger!</h1>
    <img src="https://www.searchpng.com/wp-content/uploads/2019/02/Burger-Clipart-PNG-Images-1024x1024.png" id="burger_pic" class="img-fluid" alt="burger clipart"/>
    <h2 class="lead">Enter in the name of the burger you'd like to devour and then click "Submit."</h2>
<form class="form-inline" action="/burgers" method="POST">
  <div class="form-group mx-sm-3 mb-2">
    <input class="form-control" type="text" id="name" name="burger_name" placeholder="Burger Name" required/>
  </div>
  <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>
    <!-- End of form -->
  </div>
</div>
<!-- End jumbotron -->

<!-- Start burger list section -->
<div class="container">
  <div class="row">
<!-- Start burger-ready side -->
<div class="col">
<div class="card">
  <div class="card-header ready-side">
   <h4>Ready to Devour</h4>
   <p>Click on the button to devour your burger.</p>
  </div>
  <ul class="list-group list-group-flush">
     {{#each burgers}}
    {{#unless this.devoured}}
    <li class="list-group-item">{{this.burger_name}}
    <form id="ready" action="/burgers/{{this.id}}?_method=PUT" method="POST">
    <button type="submit" class="btn btn-success"><i class="fa fa-cutlery" aria-hidden="true"></i>
</button>
    </form>    
    </li>
{{/unless}}
{{/each}}
  </ul>
</div>    
</div>
<!-- End burger-ready side -->

<!-- Start devoured burger side -->
    <div class="col">
    <div class="card">
  <div class="card-header devoured-side">
   <h4>Devoured Burgers</h4>
   <p>Click on the trash can icon to delete the devoured burger.</p>
  </div>

  <ul class="list-group list-group-flush">
            {{#each burgers}}
          {{#if this.devoured}}
    <li class="list-group-item">{{this.burger_name}}
    <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
    data-newDevoured="{{devour}}"><i class="fa fa-trash" aria-hidden="true"></i>
</button>
    </li>
          {{/if}}
        {{/each}}
  </ul>
</div> 
    </div>
  </div>
<!-- End devoured burger side -->
<!-- End burger list section -->
